extend ../layout

block content
  .container
    .row
      .col-md-7
        if movie.flash
          embed(src= movie.flash, allowfullscreen="true", quality= "high", width= "720", height= "600", align= "middle", type= "application/x-shockwave-flash")
        else
          img(src= movie.poster, width="720")
        .panel
          .panel-heading
            h3 评论区
          .panel-body
            ul.media-list
              if comments && comments.length > 0
                each item in comments
                  li.media
                    .pull-left
                      a.comment(href="#comments", data-cid=item._id, data-tid= item.from._id)
                        img.media-object(src="https://ss0.bdstatic.com/70cFvHSh_Q1YnxGkpoWK1HF6hhy/it/u=2406994475,3884179763&fm=116&gp=0.jpg", style="width:64px; height:64px;")
                    .media-body
                      h4.media-heading= item.from.name
                      p= item.content
                      if item.reply && item.reply.length > 0
                        each reply in item.reply
                          .media
                            .pull-left
                              a.comment(href="#comments", data-cid= item._id, data-tid= reply.from._id)
                                img.media-object(src="https://ss0.bdstatic.com/70cFvHSh_Q1YnxGkpoWK1HF6hhy/it/u=2406994475,3884179763&fm=116&gp=0.jpg", style="width:64px; height:64px;")
                            .media-body
                              h4.media-heading
                                | #{reply.from.name}
                                span.text-info &nbsp;回复&nbsp;
                                | #{reply.to.name}
                              p= reply.content
                    hr
            form#comments(method="POST", action="/user/comment")
              input(type="hidden", name="movie", value= movie._id)
              if user
                input(type="hidden", name="from", value= user._id)
                input.tidInput(type="hidden", name="tid")
                input.cidInput(type="hidden", name="cid")
              .form-group
                textarea.form-control(name="content", row="3")
                if user
                  button#submit.btn.btn-default(type="button") 提交
                else
                  a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录后评论
      .col-md-5
        dl.dl-horizontal
          dt 电影名字
          dd= movie.title
          dt 导演
          dd= movie.director
          dt 国家
          dd= movie.country
          dt 语言
          dd= movie.language
          dt 上映年份
          dd= movie.year
          dt 简介
          dd= movie.summary
  script.
    $(function() {
      $('.comment').on('click', function() {
        var target = $(this);
        var toId = target.data('tid');
        var commentId = target.data('cid');
        $('.cidInput').val(commentId);
        $('.tidInput').val(toId);
      })
      $('#submit').click(function(e) {
        e.preventDefault();
        $.ajax({
          type: 'POST',
          data: $('#comments').serialize(),
          url: '/user/comment'
        })
        .done(function(res) {
          if (res.success == 1) {
            window.location.reload();
          }
        })
      })
    })